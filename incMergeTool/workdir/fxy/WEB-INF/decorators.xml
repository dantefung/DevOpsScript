<decorators defaultdir="/decorators">
	<excludes>
		<pattern>/40*.jsp</pattern>
		<pattern>/resources/language.jsp*</pattern>
		<pattern>/scripts/*</pattern>
		<pattern>/proxoolAdmin*</pattern>
		<!--<pattern>/corp/sysTree*</pattern> -->
		<pattern>/corp/sysTreeDepartmentSelect*</pattern>
		<pattern>/corp/ajax/*</pattern>
		<pattern>/captcha*</pattern>
		<pattern>/*/loginRedirect*</pattern>
		<pattern>/*/logout*</pattern>
		<pattern>/member/ic_message_home*</pattern>
		<pattern>/member/handleFiCharge*</pattern>
	</excludes>
	<decorator name="default" page="corp.jsp">
		<!-- 可以用/*标注所有页面，但由于某类型的用户，比如会员和顾客，可能会使用前台的模板，因此分开，见front模板 -->
		<pattern>/corp/*</pattern>
		<pattern>/agent/*</pattern>
		<pattern>/distributor/*</pattern>
		<pattern>/customer/*</pattern>
		<pattern>/adjustMiState*</pattern>
	</decorator>
	<decorator name="member" page="member.jsp">
		<pattern>/member/*</pattern>
	</decorator>
	<decorator name="blank" page="blank.jsp">
		<!-- 此模板不包含任何CSS及JS，用于一些界面有特殊要求的界面 -->
		<pattern>/corp/login*</pattern>
		<pattern>/corp/index*</pattern>
	</decorator>
	<decorator name="member-blank" page="member-blank.jsp">
		<!-- 此模板为会员空白界面，无菜单等导航条 -->
		<pattern>/member/viewProduct*</pattern>
		<pattern>/member/viewMiAgentsInTable*</pattern>
	</decorator>
	<decorator name="wx" page="wx.jsp">
		<pattern>/wx/*</pattern>
	</decorator>
	<decorator name="guest" page="guest.jsp">
		<!-- 此模板为商城界面 -->
		<pattern>/member/login*</pattern>
		<pattern>/member/forgetPwd*</pattern>
		<pattern>/member/shippingMethod*</pattern>
		<pattern>/*</pattern>
	</decorator>
</decorators>