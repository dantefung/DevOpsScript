<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="ConsoleAppender" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss}:%p [%t] %c{1}.%M(%L) | %m%n" />
		</layout>
	</appender>

	<appender name="RollingFileAppender" class="org.apache.log4j.RollingFileAppender">
		<param name="Append" value="true" />
		<param name="MaxFileSize" value="2MB" />
		<param name="File" value="/opt/logs/tjc.log" />
		<param name="MaxBackupIndex" value="5" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss}:%p [%t] %c{1}.%M(%L) | %m%n" />
		</layout>
	</appender>

	<logger name="net.sf.ehcache">
		<level value="ERROR" />
	</logger>

	<!-- 不显示 Spring 安全验证信息中的正确登录信息，本工程暂不用 -->
	<logger name="org.springframework.security">
		<level value="ERROR" />
	</logger>

	<logger name="org.apache">
		<level value="WARN" />
	</logger>

	<logger name="org.apache.velocity">
		<level value="FATAL" />
	</logger>

	<!-- 不显示 JSF 的警告信息-->
	<logger name="org.apache.myfaces.shared_impl.renderkit.html">
		<level value="ERROR" />
	</logger>

	<logger name="org.dbunit">
		<level value="WARN" />
	</logger>

	<logger name="org.hibernate">
		<level value="WARN" />
	</logger>

	<!--logger name="org.hibernate.SQL"> <level value="DEBUG"/> </logger -->

	<logger name="org.springframework">
		<level value="WARN" />
	</logger>

	<logger name="com.cn1win">
		<level value="WARN" />
	</logger>

	<root>
		<level value="WARN" />
		<appender-ref ref="RollingFileAppender" />
	</root>

</log4j:configuration>
